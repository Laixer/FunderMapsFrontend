{
  "private": true,
  "workspaces": [
    "packages/*",
    "vendors/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Laixer/FunderMapsFrontend-Mono"
  },
  "author": "https://github.com/Laixer",
  "bugs": {
    "url": "https://github.com/Laixer/FunderMapsFrontend-Mono/issues",
    "email": "info@laixer.com"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "serve": "concurrently --kill-others --success first \"npm run serve:clientapp\" \"npm run serve:customerportal\" \"npm run serve:incidentportal\"",
    "serve:clientapp": "npm run serve --prefix ./packages/clientapp",
    "serve:customerportal": "npm run serve --prefix ./packages/customerportal",
    "serve:incidentportal": "npm run serve --prefix ./packages/incidentportal",
    "build": "lerna run build",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@types/node": "^14.14.14",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.1.0",
    "lerna": "^3.22.1",
    "typescript": "~3.9.3",
    "yargs": "^16.1.1"
  }
}
